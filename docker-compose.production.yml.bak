version: '3'

volumes:
  pg_data:
  static:
  media:
  pgadmin:

services:
  db:
    image: postgres:15
    env_file: .env
    volumes:
      - pg_data:/var/lib/postgresql/data
  pgadmin:
    image: dpage/pgadmin4:8
    environment:
      - "PGADMIN_DEFAULT_EMAIL=${PGADMIN_DEFAULT_EMAIL}"
      - "PGADMIN_DEFAULT_PASSWORD=${PGADMIN_DEFAULT_PASSWORD}"
    ports:
      - 5050:80
    volumes:
      - pgadmin:/var/lib/pgadmin
    depends_on:
      - db
  django_aiogram:
    image: # name by dockerhub
    env_file: .env
    volumes:
      - static:/static
      - media:/app/media
    depends_on:
      - db
  gateway:
    image: # name by dockerhub
    env_file: .env
    ports:
      - 8000:80
    volumes:
      - static:/static
      - media:/media
    depends_on:
      - django_aiogram

